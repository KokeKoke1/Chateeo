<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chateeo.Views.LoadingPage"
             Title="LoadingPage"
             xmlns:pages="clr-namespace:Chateeo.Components">

    <BlazorWebView x:Name="Home" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type pages:Loader}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>